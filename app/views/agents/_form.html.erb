<%= form_with(model: agent, local: true) do |form| %>
  <% if agent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(agent.errors.count, "error") %> prohibited this agent from being saved:</h2>

      <ul>
      <% agent.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :agent_name, placeholder: "Enter Name"%>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :agent_email, placeholder: "Enter email" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :agent_password, placeholder: "Enter Password" %>
    <br>
    <%= form.label :password_confirmation, "Confirm password" %>
    <%= form.password_field :password_confirmation, id: :agent_password, placeholder: "Enter Password again"  %>

  </div>

  <div class="actions">
    <%= form.submit 'Submit'%>
  </div>
<% end %>
